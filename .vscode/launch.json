  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Mock server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server/server.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/start.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/build.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/test.js",
      "args": ["--runInBand"]
    }
  ]
}
